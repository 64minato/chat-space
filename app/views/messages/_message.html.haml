.message
  .up-message
    .up-message__name
      = message.user.name
    .up-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .text-message
    - if message.content.present?
      %p.text-message__comment
        = message.content
    = image_tag message.image.url, class: 'text-message__image' if message.image.present?